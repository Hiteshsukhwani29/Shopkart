<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/ly"
    android:layout_height="match_parent"
    tools:context=".Main3Activity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:background="@color/pink_900"
        card_view:srcCompat="@drawable/thu" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/imageView3"
        android:background="#FFFFFF"
        android:scrollbarSize="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/pink_A200"
                android:fontFamily="@font/keania_one"
                android:paddingLeft="10dp"
                android:text="Daily Product Shops"
                android:textSize="30sp" />

            <HorizontalScrollView
                android:id="@+id/scroller"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scrollbarSize="0dp"
                android:scrollbarStyle="outsideOverlay">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/light_blue_A200"
                    android:orientation="horizontal"
                    android:paddingBottom="20dp">


                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view4"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:animationCache="false"
                        android:splitMotionEvents="false"
                        card_view:cardBackgroundColor="@color/colorAccent"
                        card_view:cardCornerRadius="30dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/c1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="5dp"
                                card_view:srcCompat="@drawable/aa" />

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view2"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        card_view:cardCornerRadius="30dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/c1">

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="5dp"
                                card_view:srcCompat="@drawable/images" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view11"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        card_view:cardCornerRadius="30dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/c1">

                            <ImageView
                                android:id="@+id/imageView21"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="5dp"
                                card_view:srcCompat="@drawable/dairy" />

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view5"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:animationCache="false"
                        card_view:cardBackgroundColor="@color/colorAccent"
                        card_view:cardCornerRadius="30dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/c1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView12"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="5dp"
                                card_view:srcCompat="@drawable/ac" />

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/pink_A200"
                    android:fontFamily="@font/keania_one"
                    android:paddingLeft="10dp"
                    android:text="Essential Services"
                    android:textSize="30sp" />
            </FrameLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarSize="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/light_blue_A200"
                    android:orientation="horizontal"
                    android:paddingBottom="20dp">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        card_view:cardCornerRadius="30dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/c1">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                card_view:srcCompat="@drawable/sp2" />

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view7"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        card_view:cardCornerRadius="30dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/c1">

                            <ImageView
                                android:id="@+id/imageView17"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                card_view:srcCompat="@drawable/barber" />

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view8"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        card_view:cardCornerRadius="30dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/c1">

                            <ImageView
                                android:id="@+id/imageView18"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                card_view:srcCompat="@drawable/plumber" />

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view9"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        card_view:cardCornerRadius="30dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/c1">

                            <ImageView
                                android:id="@+id/imageView28"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                card_view:srcCompat="@drawable/doctor" />

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/pink_A200"
                    android:fontFamily="@font/keania_one"
                    android:paddingLeft="10dp"
                    android:text="Non-Essential Shops"
                    android:textSize="30sp" />
            </FrameLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_blue_A200"
                android:scrollbarSize="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/light_blue_A200"
                    android:orientation="horizontal"
                    android:paddingBottom="20dp">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view13"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        card_view:cardCornerRadius="30dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/c1">

                            <ImageView
                                android:id="@+id/imageView22"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                card_view:srcCompat="@drawable/dress" />

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white_s07"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:itemTextColor="@color/green_A400"
        app:itemIconTint="@color/blue_A200"
        app:menu="@menu/drawer"
        android:layout_gravity="start"></android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
