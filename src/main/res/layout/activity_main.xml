<?xml version="1.0" encoding="utf-8"?>
    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:id="@+id/ly"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <LinearLayout
        android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:background="@color/pink_900"
            android:orientation="vertical">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/grad6"
        android:paddingLeft="35dp"
        android:paddingTop="15dp"
        android:paddingRight="35dp"
        android:paddingBottom="15dp"
        android:text="Medical Shops"
        android:textAllCaps="false"
        android:textColor="#FFEA00"
        android:textSize="30sp"
        card_view:fontFamily="@font/aclonica" />

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="clip_horizontal|center_horizontal"
        android:layout_marginTop="70dp"
        android:background="@drawable/grad8"
        android:text="Main Menu"
        android:textColor="#FFEA00"
        android:textSize="18sp" />

</FrameLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grad5"
                    android:orientation="vertical">


                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view1"
                        android:layout_width="390dp"
                        android:layout_height="180dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="100dp"
                        android:animationCache="false"
                        card_view:cardBackgroundColor="@color/colorAccent"
                        card_view:cardCornerRadius="30dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/grad8"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="false"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="220dp"
                                android:layout_marginTop="80dp"
                                android:text="Shop 1"
                                android:textColor="@color/light_blue_A200"
                                android:textSize="24sp"
                                android:typeface="serif"
                                card_view:fontFamily="@font/modak" />
                            <ImageView
                                android:id="@+id/imageView13"
                                android:layout_width="150dp"
                                android:layout_height="200dp"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/ic_person_black_24dp"/>

                            <Button
                                android:id="@+id/button1"
                                android:layout_width="130dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/textView2"
                                android:layout_centerHorizontal="false"
                                android:layout_marginLeft="190dp"
                                android:background="@drawable/gradient4"
                                android:enabled="true"
                                android:soundEffectsEnabled="true"
                                android:text="Place Order"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp" />

                            <Button
                                android:id="@+id/button3"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_below="@id/textView2"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="8dp"
                                android:layout_toRightOf="@id/button1"
                                android:background="@drawable/gradient4"
                                android:foreground="@android:drawable/ic_menu_call" />


                            <xyz.hanks.library.bang.SmallBangView
                                android:id="@+id/likeheart"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_alignParentLeft="false"
                                android:layout_alignParentBottom="false"
                                android:layout_marginLeft="320dp">

                                <ImageView
                                    android:id="@+id/imageView12"
                                    android:layout_width="70dp"
                                    android:layout_height="58dp"
                                    android:layout_alignStart="@+id/likeheart"
                                    android:layout_alignLeft="@+id/likeheart"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/heartselector" />
                            </xyz.hanks.library.bang.SmallBangView>
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view17"
                        android:layout_width="390dp"
                        android:layout_height="180dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="50dp"
                        android:animationCache="false"
                        card_view:cardBackgroundColor="@color/colorAccent"
                        card_view:cardCornerRadius="30dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/grad8"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView29"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="false"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="220dp"
                                android:layout_marginTop="80dp"
                                android:text="Shop 2"
                                android:textColor="@color/light_blue_A200"
                                android:textSize="24sp"
                                android:typeface="serif"
                                card_view:fontFamily="@font/modak" />
                            <ImageView
                                android:id="@+id/imageView19"
                                android:layout_width="150dp"
                                android:layout_height="200dp"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/ic_person_black_24dp"/>

                            <Button
                                android:id="@+id/button19"
                                android:layout_width="130dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/textView29"
                                android:layout_centerHorizontal="false"
                                android:layout_marginLeft="190dp"
                                android:background="@drawable/gradient4"
                                android:enabled="true"
                                android:soundEffectsEnabled="true"
                                android:text="Place Order"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp" />

                            <Button
                                android:id="@+id/button17"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_below="@id/textView29"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="8dp"
                                android:layout_toRightOf="@id/button19"
                                android:background="@drawable/gradient4"
                                android:foreground="@android:drawable/ic_menu_call" />


                            <xyz.hanks.library.bang.SmallBangView
                                android:id="@+id/likeheart17"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_alignParentLeft="false"
                                android:layout_alignParentBottom="false"
                                android:layout_marginLeft="320dp">

                                <ImageView
                                    android:id="@+id/imageView17"
                                    android:layout_width="70dp"
                                    android:layout_height="58dp"
                                    android:layout_alignStart="@+id/likeheart"
                                    android:layout_alignLeft="@+id/likeheart"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/heartselector" />
                            </xyz.hanks.library.bang.SmallBangView>
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view10"
                        android:layout_width="390dp"
                        android:layout_height="180dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="50dp"
                        android:animationCache="false"
                        card_view:cardBackgroundColor="@color/colorAccent"
                        card_view:cardCornerRadius="30dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/grad8"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView28"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="false"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="220dp"
                                android:layout_marginTop="80dp"
                                android:text="Shop 3"
                                android:textColor="@color/light_blue_A200"
                                android:textSize="24sp"
                                android:typeface="serif"
                                card_view:fontFamily="@font/modak" />
                            <ImageView
                                android:id="@+id/imageView15"
                                android:layout_width="150dp"
                                android:layout_height="200dp"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/ic_person_black_24dp"/>

                            <Button
                                android:id="@+id/button13"
                                android:layout_width="130dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/textView28"
                                android:layout_centerHorizontal="false"
                                android:layout_marginLeft="190dp"
                                android:background="@drawable/gradient4"
                                android:enabled="true"
                                android:soundEffectsEnabled="true"
                                android:text="Place Order"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp" />

                            <Button
                                android:id="@+id/button22"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_below="@id/textView28"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="8dp"
                                android:layout_toRightOf="@id/button13"
                                android:background="@drawable/gradient4"
                                android:foreground="@android:drawable/ic_menu_call" />


                            <xyz.hanks.library.bang.SmallBangView
                                android:id="@+id/likeheart2"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_alignParentLeft="false"
                                android:layout_alignParentBottom="false"
                                android:layout_marginLeft="320dp">

                                <ImageView
                                    android:id="@+id/imageView20"
                                    android:layout_width="70dp"
                                    android:layout_height="58dp"
                                    android:layout_alignStart="@+id/likeheart"
                                    android:layout_alignLeft="@+id/likeheart"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/heartselector" />
                            </xyz.hanks.library.bang.SmallBangView>
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </ScrollView>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
